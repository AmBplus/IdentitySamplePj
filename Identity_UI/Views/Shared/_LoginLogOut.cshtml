@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManger
<ul class="navbar-nav">
    @if (SignInManger.IsSignedIn(User))
    {
        <li class="nav-item">
            <form method="POST" asp-controller="Account" asp-action="LogOut">
                <input class="form-control text-danger" type="submit" value="Log Out" />
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link  text-success" asp-area="" asp-controller="Account" asp-action="Register"> Register </a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-success" asp-area="" asp-controller="Account" asp-action="Login" asp-route-returnUrl="@(@$"{Context.Request.Path}{Context.Request.QueryString}")"> Sign In </a>
        </li>
    }
</ul>